.chat
  .chat__side
    .chat__side__user
      %h5  Nagisa
      .chat__side__user__actions
        = link_to new_group_path do
          %i.fa.fa-pencil-square-o.fa-lg{hidden: "true"}
        = link_to edit_user_registration_path do
          %i.fa.fa-cog.fa-lg{hidden: "true"}
    %ul.chat-groups
      %li.chat-group
        = render partial: 'groups/group', collection: @groups
  .chat-main
    .chat-header
      .chat-header__left
        %h2 KKK
        %p.chat-header__users Members: Nagisa Mai
      .chat-header__right
        = link_to 'edit', class: 'chat-header__edit-btn' do
          Edit
    .chat-body
      %ul.chat-messages
        %li.chat-message
          .chat-message__header.clearfix
            %p.chat-message__name Nagisa
            %p.chat-message__time 2017/05/03 12:51:31
          %p.chat-message__body たいぷあめっせいーじ
        %li.chat-message
          .chat-message__header
            %p.chat-message__name Nagisa
            %p.chat-message__time 2017/05/04 15:27:46
          %p.chat-message__body たいぷあめっせーじ

    .chat-footer
      %form
        %textarea{placeholder: "type a message"}
        %i.fa.fa-picture-o.fa-lag{hidden: "true"}
        %input{type: "submit"}

